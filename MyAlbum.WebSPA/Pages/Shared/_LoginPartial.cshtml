@using Microsoft.AspNetCore.Identity
@using MyAlbum.Core.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string returnUrl = null;
    var query = ViewContext.HttpContext.Request.Query;
    if (query.ContainsKey("returnUrl"))
    {
        returnUrl = query["returnUrl"];
    }
}

<ul class="navbar-nav flex-grow">
    <li class="nav-item" [routerLinkActive]="['link-active']" [routerLinkActiveOptions]="{ exact: true }">
        <a class="nav-link text-dark" href="~/">
            <i class="fas fa-torii-gate"></i> Explore
        </a>
    </li>
    <li class="nav-item" [routerLinkActive]="['link-active']">
        <a class="nav-link text-dark" href="~/worldmap">
            <i class="fas fa-globe"></i> World Map
        </a>
    </li>    
    <li class="nav-item" [routerLinkActive]="['link-active']">
        <a class="nav-link text-dark" href="~/photos/new">
            <i class="fas fa-plus"></i> Add Photo
        </a>
    </li>    
    @if (SignInManager.IsSignedIn(User))
    {        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="fas fa-user-cog"></i> Manage
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@returnUrl">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@returnUrl">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </li>
    }
</ul>
